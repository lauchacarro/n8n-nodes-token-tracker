{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/nodes"],
  "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverageFrom": [
    "nodes/**/*.ts",
    "!nodes/**/*.test.ts",
    "!nodes/**/*.spec.ts",
    "!nodes/**/test/**/*"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/nodes/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"]
}
